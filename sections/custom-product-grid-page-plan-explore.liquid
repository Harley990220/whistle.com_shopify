{% schema %}
  {
  "name": "Product grid",
  "tag": "section",
  "class": "product-grid",
  "settings": [
    {
      "type": "checkbox",
      "id": "visible",
      "label": "Show section",
      "default": true
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "ptop",
      "label": "Top spacing desktop",
      "min": 0,
      "unit": "px",
      "max": 500,
      "step": 5,
      "default": 45
    },
    {
      "type": "range",
      "id": "pbottom",
      "label": "Bottom spacing desktop",
      "min": 0,
      "unit": "px",
      "max": 500,
      "step": 5,
      "default": 45
    },
    {
      "type": "range",
      "id": "ptop_mob",
      "label": "Top spacing mobile",
      "min": 0,
      "unit": "px",
      "max": 500,
      "step": 5,
      "default": 45
    },
    {
      "type": "range",
      "id": "pbottom_mob",
      "label": "Bottom spacing mobile",
      "min": 0,
      "unit": "px",
      "max": 500,
      "step": 5,
      "default": 45
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "color",
      "id": "sectionbg",
      "label": "Section background color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Compare Model Popup"
    },
    {
      "type": "text",
      "id": "btn_label",
      "label": "Button Label",
      "default": "Compare Models"
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "Product Item",
      "settings": [
        {
          "type": "color",
          "id": "bg_color",
          "label": "Highlight"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "richtext",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "color",
          "id": "highlight",
          "label": "Highlight"
        },
        {
          "type": "richtext",
          "id": "feature",
          "label": "Product Feature"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "header",
          "content": "Variant Images"
        },
        {
          "type": "image_picker",
          "id": "img1",
          "label": "Image 1"
        },
        {
          "type": "image_picker",
          "id": "img2",
          "label": "Image 2"
        },
        {
          "type": "image_picker",
          "id": "img3",
          "label": "Image 3"
        },
        {
          "type": "text",
          "id": "btn_label",
          "label": "Button label",
          "default": "Shop Now"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product grid",
      "category": "custom"
    }
  ]
}
{% endschema %}