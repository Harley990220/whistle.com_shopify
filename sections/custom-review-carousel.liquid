{% comment %} ATTENTION!!! This is compiled version of custom-review-carousel.liquid and it is overriding automatically. You should use theme development tool and sources\sections\custom-review-carousel.liquid file to code and save your changes. {% endcomment %}{% if section.settings.visible %}

  {% render 'ea-section-styles', section:section %}

  {% render 'custom-review-carousel-content', section: section %}

{% endif %}

{% schema %}
  {
  "name": "Review Carousel",
  "class": "review-carousel",
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "visible",
      "label": "Show block",
      "default": true
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "ptop",
      "label": "Top spacing desktop",
      "min": 0,
      "unit": "px",
      "max": 500,
      "step": 5,
      "default": 45
    },
    {
      "type": "range",
      "id": "pbottom",
      "label": "Bottom spacing desktop",
      "min": 0,
      "unit": "px",
      "max": 500,
      "step": 5,
      "default": 45
    },
    {
      "type": "range",
      "id": "ptop_mob",
      "label": "Top spacing mobile",
      "min": 0,
      "unit": "px",
      "max": 500,
      "step": 5,
      "default": 45
    },
    {
      "type": "range",
      "id": "pbottom_mob",
      "label": "Bottom spacing mobile",
      "min": 0,
      "unit": "px",
      "max": 500,
      "step": 5,
      "default": 45
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "color",
      "id": "sectionbg",
      "label": "Background",
      "default": "#fff"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Sub title"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "btn_label",
      "label": "Button Label"
    }
  ],
  "blocks": [
    {
      "name": "Review",
      "type": "review",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "thumb_icon",
          "label": "Thumbnail"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "select",
          "id": "icon_type",
          "options": [
            {
              "label": "None",
              "value": "none"
            },
            {
              "label": "Logo",
              "value": "logo"
            },
            {
              "label": "Instagram",
              "value": "insta"
            },
            {
              "label": "Youtube",
              "value": "youtube"
            }
          ],
          "default": "none",
          "label": "Type"
        },
        {
          "id": "video_url",
          "type": "video_url",
          "label": "Video URL",
          "accept": ["youtube", "vimeo"],
          "info": "This will work when above type is video"
        },
        {
          "type": "html",
          "id": "review_star",
          "label": "Review Star"
        },
        {
          "type": "richtext",
          "id": "review_content",
          "label": "Review Content"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "text",
          "id": "btn_label",
          "label": "Button Label",
          "default": "Buy this tracker"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Review Carousel",
      "category": "custom"
    }
  ]
}

{% endschema %}