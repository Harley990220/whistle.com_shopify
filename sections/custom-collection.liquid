        {
          "type": "paragraph",
          "content": "Number of products"
        },
        {
          "type": "range",
          "id": "num_per_row",
          "min": 2,
          "max": 4,
          "default": 3,
          "step": 1,
          "label": "Number of products per row"
        },
        {
          "type": "checkbox",
          "id": "dis_link",
