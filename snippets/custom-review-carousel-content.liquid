          (function e(){var e=document.createElement("script");e.type="text/javascript",e.async=!0, e.src="//staticw2.yotpo.com/QbyU9U2DghNaYSxmwO9ZtKDcKu250oobXVL9K99o/widget.js";var t=document.getElementsByTagName("script")[0]; t.parentNode.insertBefore(e,t)})(); 
        })
      </script>
      {% endcomment %}
      <div id='yotpo-testimonials-custom-tab'></div>
    </div>
  </div>
  <div class="popup-bg" data-popup-close></div>
</div>