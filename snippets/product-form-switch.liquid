            {% if product.metafields.recharge.yearly != blank %}
              {% assign yearlyProductUrl = all_products[product.metafields.recharge.yearly].url %}
              {% assign currentProduct = 'monthly' %}
              {% assign counter = counter | plus: 1 %}
            {% endif %}
